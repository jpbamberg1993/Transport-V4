<%= form_for(@shipment) do |f| %>
  <% if @shipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shipment.errors.count, "error") %> prohibited this shipment from being saved:</h2>

      <ul>
      <% @shipment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_field :origin %>
  </div>

  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination %>
  </div>

  <div class="field">
    <%= f.label :mode_of_transportation %><br>
    <%= f.select :mode_of_transportation, ['Select One', 'Full load', 'Less than full load'] %>
  </div>

  <div class="field">
    <%= f.label :equipment_type %><br>
    <%= f.select :equipment_type, ['Select One', 'Semi / Tractor-trailer', 'Van'] %><br>
  </div>

  <div class="field">
    <%= f.label :minimum_commitment %><br>
    <%#= f.number_field :minimum_commitment %>
    <%= f.select :minimum_commitment, (1..500) %>
    No. of trucks per day
  </div>

  <div class="field">
    <%= f.label :maximum_commitment %><br>
    <%#= f.number_field :minimum_commitment %>
    <%= f.select :maximum_commitment, (1..500) %>
    No. of trucks per day
  </div>

  <div class="field">
    <%= f.label :cost %> in US$ - flat-rate<br>
    <%= f.number_field :cost %>
  </div>

  <div class="field">
    <h4>Drop down box to show the below links</h4>
    <%= render 'choose_carriers', collection: @carriers %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
